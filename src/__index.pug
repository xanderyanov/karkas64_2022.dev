mixin commentsCaroucel
  .commentsCaroucel__area
    .commentsCaroucel__outer.wsite
      .title2.title2_center
        h2=commentsTitle
      .commentsCaroucel
        .swiper-container.commentsCaroucel-container
          .swiper-wrapper.commentsCaroucel-wrapper
            each item in comments
              .swiper-slide.commentsCaroucel-slide
                .commentsCard__outer(id=item.id)
                  .commentsCard 
                    .commentsCard__inner
                      .commentsCard__top 
                        .commentsCard__img(style='background-image: url(' + item.avatar + ');') 
                        .commentsCard__info 
                          .commentsCard__name!= item.Name
                          .commentsCard__date
                            span!= item.date 
                      .commentsCard__textArea
                        .commentsCard__text.cutLongString150!= item.text
                        if item.fulltext
                          .commentsCard__textAll!= item.fulltext
                        if item.fulltext
                          .commentsCard__more Читать весь отзыв
                      //- .commentsCard__doktor
                      //-   .commentsCard__doktorName!= item.doktorName
                      //-   .commentsCard__doctorPosition!= item.doktorPosition
                  

        .commentsCaroucel__left
          i.fa.fa-angle-left
        .commentsCaroucel__right
          i.fa.fa-angle-right
        .swiper-pagination.commentsCaroucel__pagination